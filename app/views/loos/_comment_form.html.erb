<h3>Add review:</h3>
<%= form_for :rating, url: {action: "add_comment"}, html: {class: "rating_form"} do |f| %>
  <p> <%= radio_button_tag(:rating, "0") %> <%= label_tag(:rating_neg, ":(") %> </p>
  <p> <%= radio_button_tag(:rating, "1") %> <%= label_tag(:rating_neut, ":|") %> </p>
  <p> <%= radio_button_tag(:rating, "2") %> <%= label_tag(:rating_pos, ":)") %> </p>

  <p> <%= label_tag(:comment, "comment") %> </p>
  <p> <%= f.text_area :comment, size: "60x12" %> </p>
  <%= f.submit "Create" %>
<% end %>
