<%= form_for @loo do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field(:name, autofocus: true) %>
  </div>

 <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field(:address) %>
  </div>

  <div class="actions">
    <%= f.submit "Add" %>
  </div>
<% end %>