<%= render "partials/newloo" %>

<div class="container">

<%= form_for @loo, :html => {:class => "form-inline"} do |f| %>

  <div class="form-group form-horizontal">
    <%= f.label :name %><br />
    <%= f.text_field(:name, autofocus: true) %>
  </div>

  <div class="form-group">
    <%= f.label :address %><br />
    <%= f.text_field(:address) %>
  </div>


<div class="btn-group">
  <%= f.radio_button :rating, "bad", :style=>"display:none;" %>
  <button type="button" class="btn btn-default"><img src="/assets/ratings/bad.png"></button>

  <%= f.radio_button :rating, "ok", :style=>"display:none;" %>
  <button type="button" class="btn btn-default"><img src="/assets/ratings/meh.png"></button>

  <%= f.radio_button :rating, "good", :style=>"display:none;" %>
  <button type="button" class="btn btn-default"><img src="/assets/ratings/good.png"></button>
</div>

  <div class="form-group">
    <%= f.label :Requires_key %>
    <%= f.check_box(:key) %>
  </div>

  <div class="form-group">
    <%= f.label :Baby_changing %>
    <%= f.check_box(:baby_changing) %>
  </div>

  <div class="form-group">
    <%= f.label :Handicap_accessible %>
    <%= f.check_box(:handicapped) %>
  </div>

  <div class="form-group">
    <%= f.label :Pay_to_use %>
    <%= f.check_box(:cost) %>
  </div>

  <div class="Actions">
    <%= f.submit "Add" %>
  </div>
<% end %>

</container>
