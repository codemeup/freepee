<h2> Loos: </h2>

<% @loos.each do |l| %>
	<p> Name: <%= l.name %> </p>
	<p> Address: <%= l.address %> </p>
	<p> Rating: <%= l.rating %> </p>
	<p> Baby changing? <%= l.baby_changing %></p>
	<p> Handicapped? <%= l.handicapped %> </p>
	<p> Cost? <%= l.cost %> </p>
	<p> Key required? <%= l.key %> </p>
	<%= link_to("View loo", loo_path(l.id)) %>
	<hr>

<% end %>

<% @users.each do |u| %>
	<h2> Users: </h2>
	<p><%= u.email %></p>
<% end %>
