<div class="container">
	<div class="navbar navbar-default row">
		<span class="glyphicon glyphicon-cog pull-left col-xs-3" aria-hidden="true"></span>
		<span class="brand col-xs-6">freepee.club</a></span>
		<a href="/loos/new"><span class="glyphicon glyphicon-plus pull-right col-xs-2" aria-hidden="true"></span></a>
	</div>
	<form class="navbar-form" role="search">
		<div class="input-group">
			<input type="text" class="form-control" placeholder="Search" name="q">
			<div class="input-group-btn">
				<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
			</div>
		</div>
	</form>

	<div class="panel panel-default">
		<div class="panel-body">
			<div class="list">


				<% @loos.each do |l| %>
				<% if l[:user_id] %>
				<div class="loo">
					<div class="main_info">
						<p> Name: <%= l[:name] %> </p>
						<p> Address: <%= l[:address] %> </p>
					</div>
					<div class="human_factors">
						<p> <%= l[:rating] %> </p>
						<p> <%= l[:dist] %> </p>
					</div>
					<div class="details">
						<table style="width:100%">
							<tr>
								<% if l[:baby_changing] == true %>
								<td><img src="assets/emojis/baby.png"> <%= l[:baby_changing] %></td>
								<% end %>
								<% if l[:handicapped] ==  true %>
								<td><img src="assets/emojis/wheelchair.png"><%= l[:handicapped] %></td>
								<% end %>
							</tr>
							<tr>
								<% if l[:cost] != "free" %>
								<td><img src="assets/emojis/dollar.png"><%= l[:cost] %></td>
								<% end %>
								<% if l[:key] == true %>
								<td><img src="assets/emojis/key.png"><%= l[:key] %></td>
								<% end %>
							</tr>
						</table>
					</div>
				</div>
				<%= link_to("View loo", loo_path(l[:id])) %>
				<% else %>
				<div class="main_info">
					<p> Name: <%= l[:name] %> </p>
					<p> Address: <%= l[:address] %> </p>
				</div>

				<%= link_to("Foursquare result", foursquare_single_path(l[:fs_id]) ) %>

				<% end %>
				<hr>
				<% end %>
				<%=  %>
			</div>



		</div>
	</div>

	<div class="footer">
		<button type="button" class="btn btn-warning">filter</button>
	</div>
</div>
